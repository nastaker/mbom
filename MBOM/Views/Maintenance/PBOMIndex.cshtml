@using Localization;
@{
    ViewBag.Title = Lang.PBOMList;
}
@section styles{
    @Styles.Render("~/bundles/ztreecss")
    <style type="text/css">
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        }
        .ztree li span.button.switch.level0 {
            display: none;
        }
    </style>
}
@section scripts{
    <script type="text/javascript">
        var param = { code: "@Request.Params["code"]" };
        var URL_ITEMTREE = "/Item/PbomTree"
    </script>
    <!-- import js -->
    <!-- zTree -->
    @Scripts.Render("~/bundles/ztree")
    <!-- common js -->
    @Scripts.Render("~/bundles/common")
    <!-- page js -->
    @Scripts.Render("~/bundles/pbom")
}

<div class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'center',border:false">
        <ul id="treeItems" class="ztree"></ul>
    </div>
</div>

