@using Localization;
@{
    ViewBag.Title = Lang.OptionalItemsIndex;
}
@section scripts{
    <script src="~/Scripts/jquery.serializeJSON.min.js"></script>
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/optionalitemsetindex")
}
<input type="hidden" value="@Model" name="itemid" id="itemid" />
<div class="easyui-layout" data-options="fit:true">
    <div id="toolbar" style="padding:5px;">
        <a href="#" class="easyui-linkbutton" onclick="openDialog()" data-options="iconCls:'icon-add'">添加选装关系</a>
        <a href="#" class="easyui-linkbutton" onclick="itemOptionalMapDel()" data-options="iconCls:'icon-cancel'">删除选装关系</a>
        <a href="#" class="easyui-linkbutton" onclick="reloadTable()" data-options="iconCls:'icon-reload'">刷新表格</a>
    </div>
    <table id="dgOptionalItems"></table>
</div>


<div id="dlgOptionalItems">
    <div id="dlgToolbar">
        <form id="dlgQueryFrm">
            <span>@Lang.ItemName：</span>
            <input type="text" name="name" class="easyui-textbox" />
            <span>@Lang.ItemCode：</span>
            <input type="text" name="itemcode" class="easyui-textbox" />
            <a href="#" class="easyui-linkbutton" onclick="dlgQuery()" data-options="iconCls:'icon-search'">@Lang.Find</a>
        </form>
    </div>
    <table id="dgItems"></table>
    <div id="dlgOptionalItemsFooter" class="text-right">
        <a href="#" class="easyui-linkbutton" onclick="itemOptionalMapAdd()" data-options="iconCls:'icon-add'">添加选装关系</a>
        <a href="javascript:dlg.dialog('close')" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">取消</a>
    </div>
</div>