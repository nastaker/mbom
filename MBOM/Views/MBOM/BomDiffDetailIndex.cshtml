@using MBOM.Models;
@model List<BomDiffView>
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                物料号
            </th>
            <th>
                代号
            </th>
            <th>
                PBOM物料名称
            </th>
            <th>
                MBOM对应物料
            </th>
            <th>
                数量
            </th>
            <th>
                PBOM生效时间
            </th>
            <th>
                MBOM生效时间
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bom in Model)
        {
            <tr>
                <td>@bom.item_code</td>
                <td>@bom.code</td>
                @if (string.IsNullOrWhiteSpace(bom.displayname))
                {
                    <td class="danger"></td>
                }
                else
                {
                    <td>@bom.displayname</td>
                }
                @if (string.IsNullOrWhiteSpace(bom.mbomname))
                {
                    <td class="danger"></td>
                }
                else
                {
                    <td>@bom.mbomname</td>
                }
                <td>@bom.quantity</td>
                <td>@bom.dt_ef_pbom</td>
                <td>@bom.dt_ef_mbom</td>
            </tr>
        }
    </tbody>
</table>